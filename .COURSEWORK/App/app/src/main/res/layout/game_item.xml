<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/gameItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gameLogo"

        android:layout_width="100dp"
        android:layout_height="150dp"

        android:background="@drawable/rounded_game_logo"
        android:src="@drawable/test"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gameStatus"

        style="@style/font_header"
        android:layout_width="100dp"

        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text"
        android:backgroundTint="#E63CACD2"
        android:paddingVertical="3sp"
        android:text="Пройдено"
        android:textAlignment="center"

        android:textSize="9sp"

        app:layout_constraintBottom_toBottomOf="@+id/gameLogo"
        app:layout_constraintStart_toStartOf="@+id/gameLogo" />

    <TextView
        android:id="@+id/gameText"

        android:layout_width="100dp"
        android:layout_height="wrap_content"

        style="@style/font_medium_header"
        android:layout_marginTop="6dp"
        android:textSize="12dp"

        android:text="Cyberpunk 2077"

        app:layout_constraintTop_toBottomOf="@+id/gameLogo"
        app:layout_constraintStart_toStartOf="@+id/gameLogo" />




</androidx.constraintlayout.widget.ConstraintLayout>