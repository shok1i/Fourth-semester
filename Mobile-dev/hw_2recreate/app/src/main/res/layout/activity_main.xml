<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        android:background="@color/blue"
        <!--Solution-->
        <LinearLayout
            android:id="@+id/SolutionPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ResultPanel2"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/solution_base"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="10"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="54dp" />


        </LinearLayout>

        <!--ResultPanel 2-->
        <LinearLayout
            android:id="@+id/ResultPanel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ResultPanel8">


            <TextView
                android:id="@+id/result_base2"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="2"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/result_base_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="32dp" />

        </LinearLayout>

        <!--ResultPanel 8-->
        <LinearLayout
            android:id="@+id/ResultPanel8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ResultPanel">


            <TextView
                android:id="@+id/result_base8"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="8"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/result_base_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="32dp" />

        </LinearLayout>

        <!--ResultPanel 10-->
        <LinearLayout
                android:id="@+id/ResultPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/ResultPanel16">


                <TextView
                    android:id="@+id/result_base"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="10"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/result_base_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textSize="32dp" />

            </LinearLayout>

        <!--ResultPanel 16-->
        <LinearLayout
            android:id="@+id/ResultPanel16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/buttonPanel"
            tools:layout_editor_absoluteX="0dp">


            <TextView
                android:id="@+id/result_base10"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="16"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/result_base_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="32dp" />

        </LinearLayout>

        <!--Buttons-->
        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <!--[FROM 2]-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_from_2"
                        style="@style/Widget.Design.FloatingActionButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="F2"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:cornerRadius="32dp" />
                    <!--[FROM 8]-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_from_8"
                        style="@style/Widget.Design.FloatingActionButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="F8"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:cornerRadius="32dp" />
                    <!--[FROM 10]-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_from_10"
                        style="@style/Widget.Design.FloatingActionButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="F10"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:cornerRadius="32dp" />
                    <!--[FROM 16]-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_from_16"
                        style="@style/Widget.Design.FloatingActionButton"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="F16"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        app:cornerRadius="32dp" />
                </LinearLayout>

                <!--[ NUMBERS ]-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_C"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="C"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_D"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="D"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_E"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="E"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_F"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_8"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_9"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_A"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="A"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_B"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="B"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_4"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_5"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_6"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_7"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_0"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="2dp"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/NUMBER_res"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:cornerRadius="32dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>